--makes it to where you cant ctrl + t out of the program
os.pullEvent = os.pullEventRaw

term.clear()
term.setCursorPos(1,1)

pass = ("0000")
textutils.slowPrint("password here: ")
input = read()

if (input == pass) then

textutils.slowPrint("c'mon in!")
sleep(2)
shell.run("menu")

else

textutils.slowPrint("dont steal, rebooting this pc")
sleep(2)

os.reboot()
end



