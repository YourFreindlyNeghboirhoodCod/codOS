option2 = "tictactoe"
option3 = "tetris"
option4 = "snake"
option5 = "quit"

textutils.slowPrint("watchu wanna play? (tictactoe,tetris,snake, quit).")
term.setTextColour(colours.red)
textutils.slowPrint("NOTE: IF YOU USE THE QUIT IN A GAME, YOU MUST TYPE QUIT IN THE CONSOLE AFTER!")
term.setTextColour(colours.white)
input = read()
while true do

if (input == option2) then

shell.run("tictactoe")

elseif (input == option3) then

shell.run("bbtetris")

elseif (input == option4) then

shell.run("snake")

elseif (input == option5) then

term.clear()
shell.run(".menu")
return

else 

textutils.slowPrint("please enter a valid game")
sleep(0.75)

end
input = read()
end
